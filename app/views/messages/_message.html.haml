.main__space__box
  .main__space__thread
    .main__space__name
      = message.user.name
    .main__space__date
      = message.created_at.to_s(:datetime)
  .main__space__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?